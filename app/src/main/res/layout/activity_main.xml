<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NAME:"
        android:layout_marginLeft="30dp"
        android:textSize="25sp"
         />

    <EditText
        android:id="@+id/name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt_name"
        android:textSize="25sp"
        />

    <TextView
        android:layout_marginTop="26dp"
        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMAIL:"
        android:layout_marginLeft="30dp"
        android:textSize="25sp"
        android:layout_below="@+id/txt_name"
        />

    <EditText
        android:id="@+id/email"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt_email"
        android:textSize="25sp"
        android:layout_below="@+id/name"
        />

    <TextView
        android:layout_marginTop="25dp"
        android:id="@+id/txt_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MOBILE NUMBER:"
        android:layout_marginLeft="30dp"
        android:textSize="25sp"
        android:layout_below="@+id/txt_email"
        />

    <EditText
        android:id="@+id/number"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/txt_number"
        android:textSize="25sp"
        android:inputType="number"/>

    <TextView
        android:id="@+id/message"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_below="@+id/txt_number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#d4145a"
        />

    <Button
        android:id="@+id/write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message"
        android:layout_marginTop="15dp"
        android:background="#d4145a"
        android:layout_marginLeft="10dp"
        android:text="WRITE"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:onClick="click_write"
        />

    <Button
        android:id="@+id/read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/write"
        android:background="#d4145a"
        android:layout_marginLeft="12dp"
        android:text="READ"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:onClick="click_read"
        />

    <Button
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/read"
        android:background="#d4145a"
        android:layout_marginLeft="12dp"
        android:text="UPDATE"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:onClick="click_update"
        />

    <Button
        android:id="@+id/remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/update"
        android:background="#d4145a"
        android:layout_marginLeft="12dp"
        android:text="REMOVE"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:onClick="click_remove"
        />
</RelativeLayout>